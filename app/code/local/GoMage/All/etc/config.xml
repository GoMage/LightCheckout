<?xml version="1.0"?>
<config>
    <modules>
        <GoMage_All>
            <version>1.0</version>
        </GoMage_All>
    </modules>
	<global>
		<models>
		    <gomage_all>
		        <class>GoMage_All_Model</class>
		    </gomage_all>
		</models>
		<blocks>
            <gomage_all>
                <class>GoMage_All_Block</class>
            </gomage_all>
            <adminhtml>
            	<rewrite>
            		<sales_order_view_info>GoMage_All_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
            	</rewrite>
            </adminhtml>
        </blocks>
	</global>
	<frontend>
        <layout>
            <updates>
                <gomage_all module="gomage_all">
                    <file>gomage.xml</file>
                </gomage_all>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<layout>
            <updates>
                <gomage_all module="gomage_all">
                    <file>gomage-core.xml</file>
                </gomage_all>
            </updates>
        </layout>
	</adminhtml>
</config>