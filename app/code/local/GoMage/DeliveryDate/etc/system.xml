<config>
	<sections>
		<gomage_checkout>
			<groups>
				<deliverydate translate="label">
					<label>Delivery Date</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<deliverydate translate="label">
							<label>Enable Delivery Date</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</deliverydate>
						<available_days translate="label">
							<label>Available Delivery Days</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_model>gomage_deliverydate/adminhtml_config_form_renderer_dates</frontend_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Use Ð¡trl + left mouse button to select the days</comment>
						</available_days>
						<available_hour_from translate="label">
							<label>Available Delivery from, hours</label>
							<frontend_type>select</frontend_type>
							<source_model>gomage_deliverydate/adminhtml_system_config_source_hour</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</available_hour_from>
						<available_hour_to translate="label">
							<label>Available Delivery to, hours</label>
							<frontend_type>select</frontend_type>
							<source_model>gomage_deliverydate/adminhtml_system_config_source_hour</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</available_hour_to>
						<interval_days translate="label">
							<label>Set Interval for Delivery, days</label>
							<frontend_type>select</frontend_type>
							<source_model>gomage_deliverydate/adminhtml_system_config_source_deliverydays</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</interval_days>
						<dateformat translate="label">
							<label>Date Format</label>
							<frontend_type>select</frontend_type>
							<source_model>gomage_deliverydate/adminhtml_system_config_source_dateformat</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</dateformat>						
					</fields>
				</deliverydate>
			</groups>
		</gomage_checkout>
	</sections>
</config>